/* 英雄详情页面样式 */
.hero-detail-page {
  min-height: 100vh;
  background: #FDFBF7;
  position: relative;
}

/* 沉浸式头部 */
.hero-header-immersive {
  position: relative;
  height: 500rpx;
  overflow: hidden;
}

.hero-bg-image {
  width: 100%;
  height: 100%;
  filter: blur(20px) brightness(0.8);
  transform: scale(1.1);
}

.hero-header-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.2) 0%, rgba(0, 0, 0, 0.6) 100%);
}

.hero-header-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 40rpx 32rpx;
  display: flex;
  align-items: flex-end;
  z-index: 1;
  background: linear-gradient(to top, #FDFBF7 0%, rgba(253, 251, 247, 0.8) 20%, transparent 100%);
}

.hero-avatar-wrapper {
  width: 180rpx;
  height: 220rpx;
  border-radius: 24rpx;
  overflow: hidden;
  border: 6rpx solid #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  margin-right: 32rpx;
  flex-shrink: 0;
  background: linear-gradient(135deg, #FFEBEE 0%, #FFCDD2 100%);
}

.hero-avatar {
  width: 100%;
  height: 100%;
}

.hero-title-group {
  flex: 1;
  margin-bottom: 16rpx;
}

.hero-name {
  font-size: 56rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  display: block;
  text-shadow: 0 2rpx 4rpx rgba(255, 255, 255, 0.5);
}

.hero-badges {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.badge-era {
  background: var(--primary-red);
  color: #FFFFFF;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.badge-title {
  background: rgba(0, 0, 0, 0.05);
  color: var(--text-secondary);
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.hero-years {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-family: 'DIN Alternate', sans-serif;
}

/* 内容区域 */
.content-scroll {
  padding: 24rpx 32rpx;
  margin-top: -20rpx;
  position: relative;
  z-index: 2;
}

.content-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: var(--shadow-card);
  border: 1rpx solid var(--glass-border);
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-icon-img {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
}

/* 生平事迹 (排版优化) */
.text-justified-container {
  text-align: justify;
  text-justify: inter-ideograph;
}

.biography-content {
  position: relative;
}

.drop-cap {
  float: left;
  font-size: 88rpx;
  line-height: 1;
  font-weight: 700;
  color: var(--red-primary);
  margin-right: 12rpx;
  margin-top: -8rpx;
  font-family: 'Songti SC', serif;
}

.biography-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: var(--text-primary);
  display: inline;
}

/* SVG Divider */
.section-divider {
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  opacity: 0.6;
}

.divider-img {
  width: 120rpx;
  height: auto;
}

/* 主要贡献 (勋章样式) */
.deeds-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.deed-medal {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #FFEBEE 0%, #FFCDD2 100%); /* 浅红色渐变 */
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(211, 47, 47, 0.1);
  box-shadow: 0 4rpx 12rpx rgba(211, 47, 47, 0.1);
  transition: transform 0.2s;
}

.deed-medal:active {
  transform: scale(0.98);
}

.medal-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
  filter: drop-shadow(0 2rpx 2rpx rgba(0,0,0,0.1));
}

.medal-text {
  font-size: 28rpx;
  color: #B71C1C; /* 深红色文字 */
  font-weight: 600;
}

/* 名言警句 (杂志引用风格) */
.quotes-container {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.quote-magazine-style {
  position: relative;
  padding: 60rpx 40rpx;
  text-align: center;
  background: linear-gradient(135deg, #D32F2F 0%, #B71C1C 100%); /* 深红色渐变背景 */
  border-radius: 24rpx;
  box-shadow: 0 12rpx 32rpx rgba(183, 28, 28, 0.3);
  overflow: hidden;
}

.quote-content {
  font-size: 34rpx;
  line-height: 1.6;
  color: #FFFFFF; /* 白色文字 */
  font-style: italic;
  position: relative;
  z-index: 2;
  font-weight: 500;
}

.quote-symbol-large {
  position: absolute;
  font-size: 200rpx;
  color: rgba(255, 255, 255, 0.1); /* 极低透明度白色 */
  font-family: serif;
  line-height: 1;
  z-index: 1;
}

.quote-symbol-large.left {
  top: -40rpx;
  left: 20rpx;
}

.quote-symbol-large.right {
  bottom: -80rpx;
  right: 20rpx;
}

/* 底部安全区 - 为固定操作栏留出空间 */
.safe-bottom-spacer {
  height: calc(220rpx + env(safe-area-inset-bottom));
  width: 100%;
}

/* 底部操作栏 (Floating Glass) */
.action-bar-glass {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  gap: 16rpx;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx 16rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.3s;
}

.action-btn.secondary {
  color: #374151;
  background: #F3F4F6;
}

.action-btn.primary {
  background: linear-gradient(135deg, #DC2626, #EF4444);
  color: #FFFFFF;
  flex: 1.2;
  box-shadow: 0 4rpx 16rpx rgba(220, 38, 38, 0.3);
}

.icon-share, .icon-chat {
  margin-right: 12rpx;
  font-size: 32rpx;
}

/* 动画 */
.animate-slide-up {
  animation: slideUp 0.6s cubic-bezier(0.25, 0.8, 0.25, 1) forwards;
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}


/* ==================== 分享功能样式 ==================== */
/* 隐藏的海报画布 */
.poster-canvas-hidden {
  position: fixed;
  left: -9999px;
  top: -9999px;
}

/* 海报预览弹窗 */
.poster-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.poster-modal-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
}

.poster-preview-wrapper {
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.poster-preview-img {
  width: 560rpx;
  display: block;
}

.poster-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 40rpx;
}

.poster-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx 48rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.save-btn {
  background: linear-gradient(135deg, #DC2626, #EF4444);
  color: #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(220, 38, 38, 0.4);
}

.close-btn {
  background: rgba(255, 255, 255, 0.2);
  color: #FFFFFF;
}

.poster-btn:active {
  transform: scale(0.95);
}

/* 生成中遮罩 */
.generating-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1001;
}

.generating-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.generating-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #FFFFFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.generating-text {
  color: #FFFFFF;
  font-size: 28rpx;
}

/* 底部操作栏按钮优化 */
.action-bar-glass .action-btn.secondary {
  flex: 0 0 auto;
  padding: 16rpx 24rpx;
}

.action-bar-glass button.action-btn {
  background: transparent;
  line-height: normal;
}

.action-bar-glass button.action-btn::after {
  border: none;
}
