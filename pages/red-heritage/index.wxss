.red-heritage {
  min-height: 100vh;
  background: linear-gradient(180deg, #FEF3C7 0%, #FFFFFF 100%);
  padding: 100rpx 32rpx 120rpx;
}

.section-title {
  margin-bottom: 32rpx;
}

.title-text {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #DC2626;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #9CA3AF;
}

.heritage-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.heritage-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.heritage-item.collected {
  border: 3rpx solid #F59E0B;
}

.heritage-item.locked {
  opacity: 0.5;
  filter: grayscale(100%);
}

.item-image {
  width: 100%;
  height: 280rpx;
}

.item-info {
  padding: 20rpx;
}

.item-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1F2937;
}

.locked-hint {
  display: block;
  font-size: 24rpx;
  color: #9CA3AF;
  margin-top: 8rpx;
}

/* 悬浮抽卡入口 */
.mystery-entrance {
  position: fixed;
  right: 32rpx;
  bottom: 120rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(245, 158, 11, 0.4);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.entrance-icon {
  font-size: 48rpx;
}

.entrance-text {
  font-size: 20rpx;
  color: #FFFFFF;
  margin-top: 4rpx;
}

/* 抽卡弹窗 */
.mystery-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 48rpx;
}

.box-title {
  display: block;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #DC2626;
  margin-bottom: 32rpx;
}

.box-animation {
  text-align: center;
  margin: 48rpx 0;
}

.box-image {
  width: 300rpx;
  height: 300rpx;
}

.draw-button {
  width: 100%;
  background: linear-gradient(135deg, #DC2626 0%, #EF4444 100%);
  color: #FFFFFF;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
}
