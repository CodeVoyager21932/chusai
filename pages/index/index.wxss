.grid-label {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  /* 移除衬线字体，使用系统默认 */
}

.grid-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  opacity: 0.8;
}

/* 学习统计 - Clean Card */
.stats-section {
  padding: 0 32rpx;
}

.stats-card {
  background: #FFFFFF;
  border-radius: var(--radius-card, 16px);
  padding: 32rpx;
  box-shadow: var(--shadow-card, 0 4rpx 20rpx rgba(0, 0, 0, 0.05));
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.stats-header .font-serif {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary, #1F1F1F);
}

.level-badge {
  font-size: 22rpx;
  color: #FFFFFF;
  background: var(--gradient-primary, linear-gradient(135deg, #E60012 0%, #FF4D4F 100%));
  padding: 6rpx 16rpx;
  border-radius: var(--radius-full, 9999px);
}

.stats-row {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 44rpx;
  font-weight: 600;
  color: var(--text-primary, #1F1F1F);
  margin-bottom: 4rpx;
}

.stat-unit {
  font-size: 22rpx;
  font-weight: 400;
  margin-left: 4rpx;
  color: var(--text-tertiary, #999999);
}

.stat-label {
  font-size: 22rpx;
  color: var(--text-tertiary, #999999);
}

.stat-divider {
  width: 1rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.08);
}

/* 新增渐变色 */
.gradient-orange { background: linear-gradient(135deg, #FFB74D 0%, #FF9800 100%); }
.gradient-cyan { background: linear-gradient(135deg, #4DD0E1 0%, #00BCD4 100%); }

/* 新增入口样式 */
.grid-item:nth-child(5) .icon-wrapper { background: linear-gradient(135deg, #FFE5CC 0%, #FFCC99 100%); }
.grid-item:nth-child(6) .icon-wrapper { background: linear-gradient(135deg, #E0F7FA 0%, #B2EBF2 100%); }

/* PK对战入口样式 */
.gradient-pink { background: linear-gradient(135deg, #F093FB 0%, #F5576C 100%); }
.grid-item:nth-child(7) .icon-wrapper { background: linear-gradient(135deg, #FFE5F1 0%, #FFD6E8 100%); }

/* 红色电台入口样式 */
.gradient-brown { background: linear-gradient(135deg, #D4A574 0%, #8B4513 100%); }
.grid-item:nth-child(8) .icon-wrapper { background: linear-gradient(135deg, #F5E6D3 0%, #E8D4B8 100%); }

/* Floating Action Button (FAB) - 日签唯一入口 */
.fab-daily-sign {
  position: fixed;
  bottom: 120rpx;
  right: 32rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(230, 0, 18, 0.15), 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 2rpx solid rgba(230, 0, 18, 0.1);
  animation: fab-pulse 2s ease-in-out infinite;
}

@keyframes fab-pulse {
  0%, 100% {
    box-shadow: 0 8rpx 32rpx rgba(230, 0, 18, 0.15), 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  }
  50% {
    box-shadow: 0 12rpx 40rpx rgba(230, 0, 18, 0.25), 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
  }
}

.fab-daily-sign:active {
  transform: scale(0.92);
  box-shadow: 0 4rpx 16rpx rgba(230, 0, 18, 0.1);
  animation: none;
}

.fab-icon {
  font-size: 36rpx;
  margin-bottom: 4rpx;
}

.fab-text {
  font-size: 20rpx;
  font-weight: 600;
  color: var(--primary-red, #E60012);
}
