.search-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, #FFF5F5 0%, #FFFFFF 100%);
  z-index: 9999;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-content {
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* ========== 自定义导航栏 - 动态适配状态栏 ========== */
.search-header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
  background: #E60012;
  box-sizing: border-box;
}

.header-content {
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  box-sizing: border-box;
}

/* 搜索输入框容器 - 胶囊形状 */
.search-input-box {
  flex: 1;
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 100rpx;
  height: 64rpx;
  padding: 0 24rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333333;
  background: transparent;
}

.input-placeholder {
  color: #999999;
  font-size: 28rpx;
}

/* 取消按钮 */
.cancel-btn {
  margin-left: 24rpx;
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 500;
  white-space: nowrap;
}

/* ========== 搜索内容区域 ========== */
.search-body {
  flex: 1;
  overflow: hidden;
}

.search-results {
  flex: 1;
  padding: 24rpx 32rpx;
}

.result-item {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(220, 38, 38, 0.08);
  border: 2rpx solid #FEE2E2;
  transition: all 0.3s ease;
}

.result-item:active {
  transform: scale(0.98);
  background: #FEF2F2;
}

.result-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #FEE2E2 0%, #FECACA 100%);
  border-radius: 16rpx;
}

.result-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.result-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.result-type {
  font-size: 24rpx;
  color: #DC2626;
  background: #FEE2E2;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  align-self: flex-start;
}

.empty-hint {
  text-align: center;
  padding: 120rpx 0;
  color: #9CA3AF;
  font-size: 28rpx;
}

/* ========== 结果标签样式 ========== */
.result-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.result-tag {
  font-size: 22rpx;
  color: #666666;
  background: #F3F4F6;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* ========== 热门搜索提示 ========== */
.search-tips {
  padding: 40rpx 32rpx;
}

.tips-title {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 24rpx;
  display: block;
}

.tips-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tip-tag {
  font-size: 26rpx;
  color: #E60012;
  background: #FEE2E2;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  transition: all 0.2s ease;
}

.tip-tag:active {
  transform: scale(0.95);
  background: #FECACA;
}
